---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Testing Area">
    <div class="grid grid-cols-3 gap-4">
      <div class="p-4 border rounded-md cursor-pointer" onclick="showDetails(this)">
        <h2 class="text-lg font-medium">Item 1</h2>
        <p>Some details about Item 1</p>
        <div id="details-1" class="hidden mt-4">
          <h3 class="text-base font-medium">More details about Item 1</h3>
          <p>Here's even more information about Item 1.</p>
        </div>
      </div>
      <div class="p-4 border rounded-md cursor-pointer" onclick="showDetails(this)">
        <h2 class="text-lg font-medium">Item 2</h2>
        <p>Some details about Item 2</p>
        <div id="details-2" class="hidden mt-4">
          <h3 class="text-base font-medium">More details about Item 2</h3>
          <p>Here's even more information about Item 2.</p>
        </div>
      </div>
      <div class="p-4 border rounded-md cursor-pointer" onclick="showDetails(this)">
        <h2 class="text-lg font-medium">Item 3</h2>
        <p>Some details about Item 3</p>
        <div id="details-3" class="hidden mt-4">
          <h3 class="text-base font-medium">More details about Item 3</h3>
          <p>Here's even more information about Item 3.</p>
        </div>
      </div>
      <div class="p-4 border rounded-md cursor-pointer" onclick="showDetails(this)">
        <h2 class="text-lg font-medium">Item 4</h2>
        <p>Some details about Item 4</p>
        <div id="details-4" class="hidden mt-4">
          <h3 class="text-base font-medium">More details about Item 4</h3>
          <p>Here's even more information about Item 4.</p>
        </div>
      </div>
    </div>
  
    <script>
      function showDetails(item) {
        // Hide all other items in the grid
        const gridItems = document.querySelectorAll('.grid > div');
        for (let i = 0; i < gridItems.length; i++) {
          if (gridItems[i] !== item) {
            gridItems[i].classList.add('hidden');
          }
        }
  
        // Show details of the clicked item
        const details = item.querySelector('#details');
        if (details) {
          details.classList.remove('hidden');
        }
      }
    </script>
  </Layout>
  

